// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      match /clips/{clipId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}